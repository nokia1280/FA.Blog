@model PostViewModel

@{
	ViewData["Title"] = "Edit";
}

<h2>Edit Post</h2>

<div class="container">
    <form method="post">
        <div class="mb-3 mt-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" class="form-control" value="@Model.Title" id="name" placeholder="New title" name="title">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
